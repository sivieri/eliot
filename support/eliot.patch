+        sockBool = 1;
+    }
+    res->curstate = INIT;
+    res->creation = ++counter;
+    res->sent = 0;
+    res->received = 0;
+    res->msg_number = 1;
+    res->next = head;
+    head = res;
+    FPRINTF(stderr, "DEBUG: (%ld) Driver instance created\n", (unsigned long) driver_connected(port));
