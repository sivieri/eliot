+    while (iterator != NULL) {
+        tmp = iterator;
+        iterator = tmp->next;
+        free_entry(tmp);
+    }
+    while (iterator2 != NULL) {
+        tmp2 = iterator2;
+        iterator2 = tmp2->next;
+        driver_free(tmp2);
+    }
+    while (iterator3 != NULL) {
+        tmp3 = iterator3;
+        iterator3 = tmp3->next;
+        driver_free(tmp3);
+    }
