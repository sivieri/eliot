+#define exp_read_lock()			erts_smp_rwmtx_rlock(&exptab_rwmtx)
+#define exp_write_lock()		erts_smp_rwmtx_rwlock(&exptab_rwmtx)
+#define exp_read_unlock()		erts_smp_rwmtx_runlock(&exptab_rwmtx)
